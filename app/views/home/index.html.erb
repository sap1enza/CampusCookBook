<h1>CookBook</h1>
<p>Bem-vindo ao maior livro de receitas online</p>

<%= link_to('Home', root_path, class: 'nav-link') %> 
<%= link_to('Enviar uma receita', new_recipe_path, class: 'nav-link') %>

<% @recipes.each do |f| %> 
	<h1><%= link_to(f.title, recipe_path(f)) %></h1>   
	<ul>
		<li><%= f.recipe_type %></li>
		<li><%= f.cuisine %></li>
		<li><%= f.difficulty %></li>
		<li><%= f.cook_time %> minutos</li>
	</ul>

<% end %>
