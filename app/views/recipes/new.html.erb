<% if flash[:alert] %>

	<div class="alert alert-warning">
		<%= flash[:alert] %>
	</div>

<% elsif flash[:success] %>

	<div class="alert alert-success">
		<%= flash[:success] %>
	</div>

<% elsif flash[:error] %>

	<div class="alert alert-danger">
		<%= flash[:error] %>
	</div>

<% end %>


<%= form_for @recipe, html: { multipart: true } do |f| %>

	<%= check_box_tag(:featured) %>
	<%= label_tag(:featured, 'Marcar como destaque') %>

	<%= f.label :photo, 'Foto da Receita' %>
	<%= f.file_field :photo %>

	<%= f.label :title, 'TÃ­tulo' %>
	<%= f.text_field :title %>
	
	<%= f.label :recipe_type_id, 'Tipo da Receita' %>
	<%= f.collection_select :recipe_type_id, RecipeType.all, :id, :name %>

	<%= f.label :cuisine_id, 'Cozinha' %>
	<%= f.collection_select :cuisine_id, Cuisine.all, :id, :name %>

	<%= f.label :difficulty, 'Dificuldade' %>
	<%= f.text_field :difficulty %>

	<%= f.label :cook_time, 'Tempo de Preparo' %>
	<%= f.text_field :cook_time %>

	<%= f.label :ingredients, 'Ingredientes' %>
	<%= f.text_area :ingredients %>

	<%= f.label :cook_method, 'Como Preparar' %>
	<%= f.text_area :cook_method %>

	<%= f.submit 'Enviar' %> 
	
<% end %>