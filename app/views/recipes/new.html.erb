<% if flash[:alert] %>

	<div class="alert alert-warning">
		<%= flash[:alert] %>
	</div>

<% elsif flash[:success] %>

	<div class="alert alert-success">
		<%= flash[:success] %>
	</div>

<% elsif flash[:error] %>

	<div class="alert alert-danger">
		<%= flash[:error] %>
	</div>

<% end %>


