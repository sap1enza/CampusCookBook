<div class="alert alert-success">
	<%= flash[:success] %>
</div>

<% if @recipe.featured %>
	<%= image_tag "star.png" %>
<% end %>

<h1><%= @recipe.title %></h1>
<h3>Detalhes</h3>

<p><%= @recipe.recipe_type %></p>
<p><%= @recipe.cuisine %></p>
<p><%= @recipe.difficulty %></p>
<p><%= @recipe.cook_time %> minutos</p>

<h3>Ingredientes</h3>
<p><%= @recipe.ingredients %></p>


<h3>Como Preparar</h3>
<p><%= @recipe.cook_method %></p>

<%= link_to('Voltar', root_path, class: 'btn btn-secondary')  %>
<%= link_to('Editar', edit_recipe_path, class: 'btn btn-primary') %>